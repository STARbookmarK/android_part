<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/firstFragment"
    android:id="@+id/nav_graph">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.bookmarkkk.ui.FirstPage"
        tools:layout="@layout/first_page">

        <action
            android:id="@+id/main_to_login_action"
            app:destination="@+id/loginFragment"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim"/>

        <action
            android:id="@+id/main_to_join_action"
            app:destination="@id/joinFragment"/>

        <action
            android:id="@+id/main_to_mainPage_action"
            app:destination="@+id/mainActivity"/>
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.bookmarkkk.ui.LoginPage"
        tools:layout="@layout/login">

        <action
            android:id="@+id/login_to_join_action"
            app:destination="@+id/joinFragment"/>

        <action
            android:id="@+id/login_to_main_action"
            app:destination="@+id/mainActivity"/>
    </fragment>

    <fragment
        android:id="@+id/joinFragment"
        android:name="com.example.bookmarkkk.ui.JoinPage"
        tools:layout="@layout/join">

        <action
            android:id="@+id/join_to_main"
            app:destination="@id/mainActivity"/>

        <action
            android:id="@+id/join_to_first"
            app:destination="@id/firstFragment"/>
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.bookmarkkk.ui.MainActivity"
        tools:layout="@layout/activity_main">
    </activity>

</navigation>